@model Category

<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark p-0">Create Category</h2>
        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control"/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3 p-0">
                <button type="submit" class="btn btn-dark form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
